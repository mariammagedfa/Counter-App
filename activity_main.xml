<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewmain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        android:padding="12dp"
        android:text="Court Counter"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="24dp"
        android:text="Team A"
        android:textAlignment="center"
        app:flow_verticalAlign="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewmain" />

    <TextView
        android:id="@+id/textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="168dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="84dp"
        android:text="Team B"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textView1"
        app:layout_constraintTop_toBottomOf="@id/textViewmain" />

    <TextView
        android:id="@+id/textzero1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#88888888"
        android:textSize="100dp"
        app:layout_constraintEnd_toStartOf="@id/View1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView1" />

    <TextView
        android:id="@+id/textzero2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#88888888"
        android:textSize="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/View1"
        app:layout_constraintTop_toBottomOf="@id/textview2" />

    <View
        android:id="@+id/View1"
        android:layout_width="2dp"
        android:layout_height="500dp"
        android:layout_marginTop="55dp"
        android:layout_marginRight="19dp"
        android:background="@color/black"
        android:orientation="vertical"
        app:layout_constraintRight_toLeftOf="@id/button6"
        app:layout_constraintTop_toBottomOf="@id/textViewmain" />

    <Button
        android:id="@+id/button1"
        android:layout_width="150dp"
        android:layout_height="73dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="24dp"
        android:backgroundTint="@color/orange"
        android:text="+3 points"
        android:textSize="18dp"
        app:layout_constraintRight_toLeftOf="@id/View1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textzero1" />

    <Button
        android:id="@+id/button2"
        android:layout_width="150dp"
        android:layout_height="73dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="@color/orange"
        android:text="+3 points"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/View1"
        app:layout_constraintTop_toBottomOf="@id/textzero2" />

    <Button
        android:id="@+id/button3"
        android:layout_width="150dp"
        android:layout_height="73dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="36dp"
        android:layout_marginRight="24dp"
        android:backgroundTint="@color/orange"
        android:text="+2 points"
        android:textSize="18dp"
        app:layout_constraintRight_toLeftOf="@id/View1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button1" />

    <Button
        android:id="@+id/button4"
        android:layout_width="150dp"
        android:layout_height="73dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="36dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="@color/orange"
        android:text="+2 points"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/View1"
        app:layout_constraintTop_toBottomOf="@id/button2" />

    <Button
        android:id="@+id/button5"
        android:layout_width="150dp"
        android:layout_height="73dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="36dp"
        android:layout_marginRight="24dp"
        android:backgroundTint="@color/orange"
        android:text="free throw"
        android:textSize="16dp"
        app:layout_constraintRight_toLeftOf="@+id/View1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button3" />

    <Button
        android:id="@+id/button6"
        android:layout_width="150dp"
        android:layout_height="73dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="36dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="@color/orange"
        android:text="free throw"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/View1"
        app:layout_constraintTop_toBottomOf="@id/button4" />

    <Button
        android:id="@+id/buttonzero"
        android:layout_width="150dp"
        android:layout_height="73dp"
        android:backgroundTint="@color/orange"
        android:text="Reset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/View1" />
</androidx.constraintlayout.widget.ConstraintLayout>
